<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EditActivity">

    <EditText
        android:id="@+id/edtNama"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nama"
        android:layout_marginHorizontal="32dp"/>

    <EditText
        android:id="@+id/edtAlamat"
        android:layout_below="@+id/edtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_alamat"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="32dp"/>

    <EditText
        android:id="@+id/edtHp"
        android:layout_below="@+id/edtAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_hp"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_below="@+id/edtHp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/simpan"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="32dp"/>

</RelativeLayout>